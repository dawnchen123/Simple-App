<header class="header navbar navbar-fixed-top navbar-inverse" id="header">
   <nav>
      <ul class="nav navbar-nav pull-right">
        <br >
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown" >
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true"
               aria-haspopup="true" id="dropdownMenu1"" >
              Account <span class="caret" ></span>
            </a>
            <ul class="dropdown-menu nav" aria-labelledby="dropdownMenu1" style="background: white;">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
    <%= link_to image_tag("rails.png", alt: "Rails logo", height: 80, width: 80), root_path, id: "gr-logo" %>

</header>